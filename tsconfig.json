{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "types": ["node", "jest"],
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
